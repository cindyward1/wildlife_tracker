<h1><b>Wildlife Tracker</b>&nbsp&nbsp&nbsp&nbsp<%= image_tag('wildlife_tracker.png') %></h1>

<h3>Update the following information about the region:</h3>
<form action="/regions/<%= @region.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for "region_name">Region Name&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
         </label>
  <input id="region_name" name="region[name]" type="text" value="<%= @region.name %>">
  <br><label for "region_max_lat">Region Max Latitude&nbsp&nbsp&nbsp&nbsp</label>
  <input id="region_max_lat" name="region[max_latitude]" type="number" step="any"
         value="<%= @region.max_latitude %>">
  <label for "region_min_lat">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspRegion Min Latitude&nbsp&nbsp&nbsp&nbsp</label>
  <input id="region_min_lat" name="region[min_latitude]" type="number" step="any"
         value="<%= @region.min_latitude %>">
  <br><label for "region_max_long">Region Max Longitude&nbsp</label>
  <input id="region_max_long" name="region[max_longitude]" type="number" step="any"
         value="<%= @region.max_longitude %>">
  <label for "region_min_long">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbspRegion Min Longitude&nbsp</label>
  <input id="region_min_long" name="region[min_longitude]" type="number" step="any"
         value="<%= @region.min_longitude %>">
  <br><br><button style="background-color:yellow">Update Region</button>
</form><br>
  <button style="background-color:red"><a href="/regions/<%= @region.id %>"
        data-confirm="Are you sure you want to delete this region including ALL of its sightings?"
        data-method="delete" rel="nofollow">Delete Region</a>
        </button>&nbsp&nbsp<b>This will delete ALL sightings for this region!</b><br>
<h3>Sightings For This Region</h3>
<ul>  <% @sightings.each do |sighting| %>
        <% if sighting.subspecies == "" %>
          <% subspecies_str = "None" %>
        <% else %>
          <% subspecies_str = sighting.subspecies %>
        <% end %>
  <li><%= sighting.date %>, Subspecies = <%= subspecies_str %>, Region = <%= sighting.region.name %>,
                            Latitude = <%= sighting.latitude %>, Longitude = <%= sighting.longitude %>

  </li>
      <% end %>
</ul>
<br>
